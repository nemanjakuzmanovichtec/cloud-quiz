    "baseUrl": ".",
    "paths": {
      "@application": ["src/application"],
      "@application/*": ["src/application/*"],
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"],
      "@data-access": ["src/data-access"],
      "@data-access/*": ["src/data-access/*"],
      "@infrastructure": ["src/infrastructure"],
