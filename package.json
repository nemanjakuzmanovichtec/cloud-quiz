{
  "name": "cloud-quiz",
  "version": "1.0.0",
  "description": "Serverless AWS Quiz Application",
  "main": "serverless.ts",
  "author": "HTEC Group",
  "license": "MIT",
  "scripts": {
    "stack:deploy": "sls deploy --verbose -s development",
    "function:deploy": "sls deploy function -s development -f",
    "stack:remove": "sls remove -s development",
    "start:local": "sls offline start --ignoreJWTSignature",
    "dotenv": "STAGE=${STAGE:=development} && sls export-env -s $STAGE",
    "test:unit": "npm run dotenv && jest --coverage",
    "lint": "eslint '**/*.{js,ts}' --ignore-pattern node_modules/ --fix"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.85.0",
    "@aws-sdk/client-dynamodb": "^3.87.0",
    "@aws-sdk/lib-dynamodb": "^3.94.0",
    "aws-jwt-verify": "^3.0.0",
    "lambda-hooks": "^0.2.1",
    "ts-case-convert": "^2.0.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.0.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/jest": "^27.5.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "aws-sdk-client-mock": "^0.6.2",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.5",
    "prettier": "^2.6.2",
    "serverless": "^3.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-esbuild": "^1.23.3",
    "serverless-export-env": "github:arabold/serverless-export-env",
    "serverless-iam-roles-per-function": "^3.2.0-e97ab49",
    "serverless-offline": "^8.7.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
